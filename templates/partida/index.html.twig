{% extends 'base.html.twig' %}

{% block body %}
    <a href="{{path('partida_add')}}" class='btn btn-primary float-end'>Crear</a>
    <table class='table table-striped table-hover caption-top'>
        <caption>Partidas: </caption>
        <thead>
            <tr class='table-primary'>
                <td align='center'>C&oacute;digo</td>
                <td align='center'>Nombre</td>
                <td align='center'>Acumula</td>
                <td align='center'>Nivel</td>
                <td align='center'>Padre</td>
                <td>&nbsp;</td>
            </tr>
        </thead>
        <tbody>
            {% for partida in partidas %}
                <tr>
                    <td>{{ partida.codigo}}</td>
                    <td>{{ partida.nombre }}</td>
                    <td align='center'><span class='fa fa-{{ partida.acumula ?  'check' : 'times' }}'></span></td>
                    <td align='center'>{{ partida.nivel }}</td>
                    <td>{{ partida.padre ?  partida.padre.codigo: '' }}</td>
                    <td align='center'><a href="{{ path('partida_edit', {id: partida.id})}}"><span class='fa fa-pencil'></span></a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
