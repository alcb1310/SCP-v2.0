{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="row m-5">
            <div class="col-sm-8 offset-sm-2 border shadow p-5">
                <h1 class="h3 mb-3 font-weight-normal">Ingrese al Sistema</h1>
                <div class="row mb-2">
                    <div class="col-sm-2 form-label col-form-label">
                        <label for="inputUsername">Usuario</label>
                    </div>
                    <div class="col-sm-10">
                        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-sm-2 form-label col-form-label">
                        <label for="inputPassword">Contrase&ntilde;a</label>
                    </div>
                    <div class="col-sm-10">
                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col">
                        <button class="btn btn-primary mt-2 float-end" type="submit">
                            Ingresar
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    </form>
{% endblock %}
