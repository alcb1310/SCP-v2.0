{% extends "base.html.twig" %}

{% block body %}
     <a href="{{path('actual_add')}}" class='btn btn-primary float-end'>Crear</a>
     {{ pagerfanta(pager) }}
     <table class="table table-striped table-hover caption-top align-middle">
          <caption>Avance de obra:</caption>
          <thead>
               <tr  style='background: rgb(0, 102, 153); color:white;'>
                    <td align='center'>Obra</td>
                    <td align='center'>C&oacute;digo</td>
                    <td align='center'>Partida</td>
                    <td align='center'>Casas</td>
                    <td align='center'>Total</td>
                    <td align='center'>&nbsp;</td>
               </tr>
          </thead>
          <tbody>
               {% for actual in pager %}
                    <tr>
                         <td>{{ actual.obra }}</td>
                         <td>{{ actual.partida.codigo }}</td>
                         <td>{{ actual.partida.nombre }}</td>
                         <td align='right'>{{ actual.casas ? actual.casas|number_format(2, '.', ','): '' }}</td>
                         <td align='right'>{{ actual.total|number_format(2, '.', ',') }}</td>
                         <td>
                              <a href="{{ path('actual_edit', { obraid: actual.obra.id, partidaid: actual.partida.id}) }}"><span class="fa fa-pencil"></span></a>
                              <a href="#"><span class='fa fa-trash'></span></a>
                         </td>
                    </tr>
               {% endfor %}
          </tbody>
     </table>
     {{ pagerfanta(pager) }}
{% endblock %}