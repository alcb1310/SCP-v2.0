{% extends 'base.html.twig' %}

{% block body %}
    <a href="{{path('factura_add')}}" class='btn btn-primary float-end'>Crear</a>
    <table class='table table-striped table-hover caption-top'>
        <caption>Facturas:</caption>
        <thead>
            <tr style='background: rgb(0, 102, 153); color:white;'>
                <td align='center'>Obra</td>
                <td align='center'>Proveedor</td>
                <td align='center'>N&uacute;mero</td>
                <td align='center'>Fecha</td>
                <td align='center'>Total</td>
                <td>&nbsp;</td>
            </tr>
        </thead>
        <tbody>
            {% for factura in facturas %}
                <tr>
                    <td>{{ factura.obra.nombre }}</td>
                    <td>{{ factura.proveedor.nombre }}</td>
                    <td>{{ factura.numero }}</td>
                    <td>{{ factura.fecha|date("m/d/Y") }}</td>
                    <td align='right'>{{ factura.total|number_format(2, '.', ',') }}</td>
                    <td><a href="{{ path('factura_edit', {id: factura.id})}}"><span class='fa fa-pencil'></span></a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
